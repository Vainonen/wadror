<% if @user == current_user %>
  <h1>Change password of
    <%= @user.username %>
  </h1>
    <%= link_to 'Edit', edit_user_path(@user) %> |
    <%= link_to 'Destroy', @user, method: :delete, data: { confirm: 'Are you sure?' } %> |
<% else %>
  <h1>Editing user</h1>
<% end %>

<%= render 'form' %>

<%= link_to 'Show', @user %> |
