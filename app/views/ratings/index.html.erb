<h2>List of ratings</h2>

<p> Number of ratings: <%= @ratings.count %> </p>

<ul>
  <% @ratings.each do |rating| %>
      <li> <%= rating %>
        <%= link_to rating.user.username, rating.user %>
      </li>
<% end %>
</ul>

<% if not current_user.nil? %>
  <td><%= link_to 'Create new rating', new_rating_path %></td>
<% end %>