<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @beer_club.name %>
</p>

<p>
  <strong>Founded:</strong>
  <%= @beer_club.founded %>
</p>

<p>
  <strong>City:</strong>
  <%= @beer_club.city %>
</p>

<ul>
  <% @beer_club.memberships.each do |membership| %>
      <li>
        <%= link_to membership.user.username, membership.user %>
      </li>
  <% end %>
</ul>



<% if current_user %>
    <% unless @beer_club.memberships.map(&:user_id).include? current_user.id %>
      <%= form_for(@membership) do |f| %>
        <%= f.hidden_field :beer_club_id %>
        <%= f.submit value:"join the club" %>
      <% end %>
    <% end %>
    <% if @beer_club.memberships.map(&:user_id).include? current_user.id %>
        <%= form_for(@membership, method: "delete") do |f| %>
            <%= f.hidden_field :beer_club_id %>
            <%= f.submit value: "end the membership" %>
        <% end %>
    <% end %>
<% end %>


<%= link_to('Edit', edit_beer_club_path(@beer_club)) if current_user %>
